<div class="container">
  <div class="container--inner" style="transform:scale({{level.zoom}})">
    {{#draw-board level.board}}
      {{draw-player level.player onMove=(route-action 'move' level)}}
    {{/draw-board}}
  </div>

  {{#if level.won}}
    {{level-over level next=nextLevel}}
  {{/if}}
</div>
